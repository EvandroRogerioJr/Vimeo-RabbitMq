@page "/Video"
@model IndexModel
@{
    ViewData["Title"] = "Video page";
}

<form asp-action="UploadVideo" asp-controller="Video" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="arquivo">Selecione o arquivo de vídeo:</label>
        <input type="file" name="arquivo" id="arquivo" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>


